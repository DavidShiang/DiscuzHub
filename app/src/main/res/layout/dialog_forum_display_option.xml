<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/fragment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/advance_view_configuration"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:padding="4dp"
                android:text="@string/forum_category"
                android:textColor="@color/colorCloud" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/category_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                app:singleSelection="true" />

            <TextView
                android:id="@+id/sort_key_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="?attr/colorPrimary"
                android:padding="4dp"
                android:text="@string/sort_key"
                android:textColor="@color/colorCloud" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/sort_key_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/sort_key_reply"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sort_key_reply" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/sort_key_publish"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sort_key_publish" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/sort_key_view"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sort_key_view" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/sort_key_heat"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sort_key_heat" />
            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="?attr/colorPrimary"
                android:padding="4dp"
                android:text="@string/thread_type"
                android:textColor="@color/colorCloud" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/type_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/type_poll"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/type_poll" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/type_reward"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/type_reward" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/type_activity"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/type_activity" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/type_debate"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/type_debate" />
            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="?attr/colorPrimary"
                android:padding="4dp"
                android:text="@string/thread_status"
                android:textColor="@color/colorCloud" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/status_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/status_digest"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_digest" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/status_hot"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_hot" />
            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/time_filter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="?attr/colorPrimary"
                android:padding="4dp"
                android:text="@string/time_filter"
                android:textColor="@color/colorCloud" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/time_filter_group"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/time_filter_today"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_filter_day" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/time_filter_week"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_filter_week" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/time_filter_month"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_filter_month" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/time_filter_quarter"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_filter_quarter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/time_filter_year"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_filter_year" />
            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/reset_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="@string/button_reset"
                    app:icon="@drawable/ic_round_refresh_24"
                    app:iconGravity="textStart" />

                <Button
                    android:id="@+id/ok_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="@android:string/ok"
                    app:icon="@drawable/ic_check_24px"
                    app:iconGravity="textEnd" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</layout>

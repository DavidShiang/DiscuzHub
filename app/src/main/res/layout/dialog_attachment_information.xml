<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/filename_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="?attr/colorPrimaryDark"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/filename"
            android:textColor="@color/colorPureWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/filename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="viewStart"
            android:textColor="@color/colorTextDefault"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/filename_tag"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/file_size_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="?attr/colorPrimaryDark"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/file_size"
            android:textColor="@color/colorPureWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filename" />

        <TextView
            android:id="@+id/file_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="viewStart"
            android:textColor="@color/colorTextDefault"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/file_size_tag"
            app:layout_constraintTop_toTopOf="@+id/file_size_tag"
            tools:text="@tools:sample/cities" />

        <TextView
            android:id="@+id/file_upload_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="viewStart"
            android:textColor="@color/colorTextDefault"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/file_upload_time_tag"
            app:layout_constraintTop_toBottomOf="@+id/file_size"
            tools:text="@tools:sample/us_phones" />

        <TextView
            android:id="@+id/file_upload_time_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="?attr/colorPrimaryDark"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/file_upload_time"
            android:textColor="@color/colorPureWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/file_upload_time" />

        <TextView
            android:id="@+id/file_download_times_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="?attr/colorPrimaryDark"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/file_download_times"
            android:textColor="@color/colorPureWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/file_upload_time" />

        <TextView
            android:id="@+id/file_download_times"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="viewStart"
            android:textColor="@color/colorTextDefault"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/file_download_times_tag"
            app:layout_constraintTop_toBottomOf="@+id/file_upload_time"
            tools:text="@tools:sample/date/ddmmyy" />

        <TextView
            android:id="@+id/file_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="viewStart"
            android:textColor="?attr/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/file_download_times_tag"
            app:layout_constraintTop_toBottomOf="@+id/file_download_times"
            tools:text="@tools:sample/date/ddmmyy" />

        <TextView
            android:id="@+id/file_price_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="?attr/colorAccent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/file_pay_price"
            android:textColor="@color/colorPureWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/file_download_times_tag" />

        <LinearLayout
            android:id="@+id/remote_warn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/file_price">

            <ImageView
                android:id="@+id/file_remote_warn_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_post_status_warned_24px" />

            <TextView
                android:id="@+id/file_remote_warn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/file_remote_warn"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
